<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FolderOptionsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:elevation="4dp"
        android:theme="@style/Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddPeople"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_group_add_black"
        android:layout_below="@+id/toolbar"
        android:layout_alignEnd="@+id/txtInvitar"
        android:layout_marginEnd="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/txtInvitar"
        android:id="@+id/txtInvitar"
        android:layout_marginStart="33dp"
        android:layout_below="@+id/btnAddPeople"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditFolder"
        android:src="@drawable/ic_create_black"
        android:layout_gravity="center|right"
        android:layout_alignTop="@+id/btnAddPeople"
        android:layout_alignEnd="@+id/txtEditar"
        android:layout_marginEnd="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/txtEditar"
        android:id="@+id/txtEditar"
        android:layout_alignTop="@+id/txtInvitar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp" />

</RelativeLayout>